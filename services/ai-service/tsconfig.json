{
  "compilerOptions": {
    "target": "ES2020",                       // Modern JS target
    "module": "CommonJS",                      // Node.js uses CommonJS
    "outDir": "dist",                          // Compiled JS output
    "rootDir": "src",                          // Source TS files
    "strict": true,                            // Enable strict type checks
    "esModuleInterop": true,                   // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
